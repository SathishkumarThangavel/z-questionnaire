{{#if isMultiChoice}}
<MultiChoice
    @choices = {{@question.choices}}
    @identifier = {{@identifier}}
    @multiple = {{@question.multiple}}
    @next = {{action "next"}}
/>
{{else if isTextArea}}
    <textarea class="text-area" id={{@identifier}} autofocus/>
{{else if isTextField}}
    <input class="input-field" id={{@identifier}} autofocus=true/>
{{/if}}
